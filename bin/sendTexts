#!/usr/bin/env node

var twilio = require('../server/twilio.js');
var utils = require('../server/utils.js');
var MESSAGE = "My dear friend: How was your day yesterday? Did you stay hydrated? How would you describe your day? For my sake, please separate your responses with commas. Example: 7, yes, walking lunch with Friedrich. Sincerely, Sigmund";

utils.sendWorkerTexts(twilio, MESSAGE, function(err, users) {
  if (err) return console.error(err);
  console.log('[SENT]');
  console.log(users);
});